<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
	<servlet>
		<servlet-name>ShowFilms</servlet-name>
		<servlet-class>show.ShowFilms</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowFilms</servlet-name>
		<url-pattern>/showfilms</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>showFindFilm</servlet-name>
		<servlet-class>show.showFindFilm</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>showFindFilm</servlet-name>
		<url-pattern>/showfilm</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>addOneFilm</servlet-name>
		<servlet-class>show.addOneFilm</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addOneFilm</servlet-name>
		<url-pattern>/addonefilm</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
